# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qnbank

# ===========================================
# Authentication
# ===========================================
# JWT Secret - IMPORTANT: Generate a strong random string (min 32 characters)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long

# Admin Access Key - Used for registering additional admin accounts
# First user can register without this key
ADMIN_ACCESS_KEY=your-secure-admin-access-key

# ===========================================
# Site Configuration
# ===========================================
# Site URL (defaults to http://localhost:3000 in development)
# NEXT_PUBLIC_SITE_URL=https://your-production-domain.com

# Node Environment (automatically set by Next.js)
# NODE_ENV=development
